CC=gcc
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	rm -rf .*.sw* *~ school

oclean:
	rm -rf *.o

fclean:
	rm -rf .*.sw* *~ *.o school

re:
	CC=gcc
	SRC=main.c school.c
	OBJ=$(SRC:.c=.o)
	NAME=school
	rm -f main.o school.o
	$(CC) $(OBJ) -o $(NAME)
